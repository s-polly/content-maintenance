// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/anaconda
{
	"name": "Anaconda (Python 3)",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile"
	},
  "secrets": {
    "GH_ACCESS_TOKEN": {
      "description": "Your GitHub access token.",
      "documentationUrl": "https://docs.github.com/en/authentication/keeping-your-account-and-data-secure/managing-your-personal-access-tokens"
    }
  },
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install PyGithub PyYAML",

	// Use 'postStartCommand' to run commands after the container starts.
	"postStartCommand": "code --command markdown.showPreview docs/code-snippets.md",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"files.defaultLanguage": "markdown"
			},
			"extensions": [
				"ms-vscode.vscode-markdown"
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
